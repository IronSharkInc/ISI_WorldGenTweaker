<world_count>
	<!-- 
		adjust the number of townships 
		- at least one of each township
		- more large cities

		count:
		- few, default, many
		
		world_size: 
		- tiny		0,5000			2048, 3072, 4096, 
		- small		5000,7000		5120, 6144, 
		- medium	7000,10000		7168, *8192, 9216,
		- large		10000,99000		10240
	-->

	<!-- comments on the right indicate the original values -->

	<!-- oldwest -->
	<set xpath="/rwgmixer/world[@name='tiny']/property[@class='oldwest']/property[@name='count']/@value">1, 1, 2</set><!-- 0, 1, 2 -->
